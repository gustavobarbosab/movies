<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Movies.Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="Movies.Text.Title" parent="Movies.Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Movies.Text.SubTitle" parent="Movies.Text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Movies.Text.Body" parent="Movies.Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Movies.Text.Tinny" parent="Movies.Text">
        <item name="android:textSize">14sp</item>
    </style>
</resources>