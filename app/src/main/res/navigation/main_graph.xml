<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_graph"
    app:progressDestination="@+id/fragment_progress"
    app:startDestination="@+id/fragment_show_case">

    <fragment
        android:id="@+id/fragment_show_case"
        android:name="io.github.gustavobarbosab.showcase.presentation.ShowCaseFragment">
        <action
            android:id="@+id/action_detail_fragment"
            app:destination="@id/detailsFragment"
            app:popUpTo="@id/fragment_show_case" />
        <argument
            android:name="SHOW_NAVBAR"
            android:defaultValue="true" />
        <argument
            android:name="TOOLBAR_LOGO"
            android:defaultValue="true" />
    </fragment>

    <fragment
        android:id="@+id/fragment_favorite_movies"
        android:name="io.github.gustavobarbosab.favorite_movies.FavoriteMoviesFragment">
        <argument
            android:name="SHOW_NAVBAR"
            android:defaultValue="true" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="io.github.gustavobarbosab.movies.detail.MovieDetailFragment"
        android:label="Details"
        app:moduleName="detail_private">
        <argument
            android:name="detailModel"
            app:argType="io.github.gustavobarbosab.detail.domain.model.MovieDetail" />
    </fragment>

    <fragment
        android:id="@+id/fragment_progress"
        android:name="io.github.gustavobarbosab.movies.FeatureLoadingFragment"
        android:label="ProgressFragment" />
</navigation>